<div>
  <%= form_with(model: feature) do |form| %>
    <% if feature.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(feature.errors.count, "error" ) %> prohibited this feature type from being saved:
        </h2>
        <ul>
          <% feature.errors.each do |error| %>
            <li>
              <%= error.full_message %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

   <div class="form-group">
      <%= form.label :feature_type_id %>
      <%= form.select :feature_type_id, @feature_types.map{|ft| [ft.name, ft.id]}, {}, {class: "form-control", required: true} %>
    </div>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :colour %>
      <%= form.color_field :colour, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :content %>
      <%= form.rich_text_area :content, class: "form-control", required: true %>
    </div>

    <div class="actions">
      <%= form.submit :save, class: "btn btn-success container-fluid mt-3" %>
    </div>
  <% end %>
</div>
