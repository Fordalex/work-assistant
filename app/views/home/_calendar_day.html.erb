<div data-day="<% day %>" class="calendar-dayContainer <% if day.to_s == "Monday" %>calendar-open<% else %>calendar-closed<% end %>">
  <h3 class="m-0"><b><%= day %></b></h3>
  <p><%= day %></p>

  <p>
    <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample<%= day %>" aria-expanded="false" aria-controls="collapseExample<%= day %>">
      + Ticket
    </button>
  </p>
  <div class="collapse mb-3" id="collapseExample<%= day %>">
    <div class="">
      <%= render partial: "tickets/form", locals: {ticket: @ticket} %>
    </div>
  </div>


  <div class="calendar-timeSheet">
    <% 24.times do |hour| %>
      <div class="hour-container">
        <hr>
        <span><%= hour.to_s + (hour < 12 ? " am" : " pm") %></span>
      </div>
    <% end %>

    <% tickets.each do |ticket| %>
      <%= render partial: "ticket", locals: {ticket: ticket} %>
    <% end %>
  </div>
</div>
