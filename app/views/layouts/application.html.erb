<!DOCTYPE html>
<html>
  <head>
    <title>WorkNotes</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav>
      <ul>
        <li>
          <div class="logo main-gradient"></div>
        </li>
        <li class="navList-item">
          <%= link_to root_path do %>
            <% if current_page?(root_path) %>
              <%= image_tag("icons/home_icon_selected.png") %>
              <span class="navLink-selected">Home</span>
            <% else %>
              <%= image_tag("icons/home_icon.png") %>
              <span>Home</span>
            <% end %>
          <% end %>
        </li>

        <li class="navList-item">
          <%= link_to notes_path do %>
            <% if current_page?(notes_path) %>
              <%= image_tag("icons/notes_icon_selected.png") %>
              <span class="navLink-selected">Notes</span>
            <% else %>
              <%= image_tag("icons/notes_icon.png") %>
              <span>Notes</span>
            <% end %>
          <% end %>
        </li>

        <li class="navList-item">
          <%= link_to websites_path do %>
            <% if current_page?(websites_path) %>
              <%= image_tag("icons/website_icon_selected.png") %>
              <span class="navLink-selected">websites</span>
            <% else %>
              <%= image_tag("icons/website_icon.png") %>
              <span>websites</span>
            <% end %>
          <% end %>
        </li>
      </ul>
      <ul> 
        <li class="navList-item">
          <%= link_to websites_path do %>
              <%= image_tag("icons/logout_icon.png") %>
              <span>Logout</span>
          <% end %>
        </li>
      </ul>
    </nav>

    <div class="page-container">
      <%= yield %>
    </div>



  </body>
</html>
