<div class="container-fluid mt-3">
  <%= link_to "Add feature type", new_feature_type_path, class: "btn btn-primary" %>
  <hr class="mb-0">
</div>

<div class="cmsSections-container">
    <% @feature_types.each do |feature_type| %>
      <div class="cmsSection">
         <div class="cmsEntity-container cms-category" style="border-top: solid 5px <%= feature_type.colour %>">
            <div class="d-flex justify-content-between align-items-center">
              <h6 class="m-0"><b><%= feature_type.name %></b></h6>
              <div>
                <span><%= feature_type.features.count %></span>
                <%= link_to edit_feature_type_path(feature_type) do %>
                  <i class="fas fa-edit ms-2"></i>
                <% end %>
              </div>
            </div>
          </div>

          <%= link_to new_feature_path do %>
            <div class="cmsEntity-container d-flex justify-content-between align-items-center">
              <h6 class="m-0"><b>New</b></h6>
              <span>+</span>
            </div>
          <% end %>

          <div class="arrow-divider arrow-divider-body mb-5"></div>

          <% feature_type.features.each do |feature| %>
            <%= render partial: "feature", locals: {feature: feature} %>
          <% end %>
          <% unless feature_type.features.any? %>
            <p class="text-secondary">No <%= feature_type.name.downcase %> have been created yet.</p>
          <% end %>
      </div>
    <% end %>
</div>
