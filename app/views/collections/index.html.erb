<%= link_to "New collection", new_collection_path, class: "btn btn-primary" %>

<div class="row m-0 p-0">
  <% @collections.each do |collection| %>
    <div class="col">
      <div class="collection-container">
        <h4><%= collection.name %></h4>
        <ul>
          <% collection.user_groups.each do |user_group| %>
            <li><%= user_group.user.email %></li>
          <% end %>
        </ul>
        <%= link_to "Enter", set_collection_path(collection), class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>

<p>Collections: <%= @collections.count %></p>
