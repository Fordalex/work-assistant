<div>
  <%= form_with(model: record) do |form| %>
    <% if record.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(record.errors.count, "error" ) %> prohibited this feature type from being saved:
        </h2>
        <ul>
          <% record.errors.each do |error| %>
            <li>
              <%= error.full_message %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :colour %>
      <%= form.color_field :colour, class: "form-control", required: true %>
    </div>

    <div class="actions">
      <%= form.submit :save, class: "btn btn-success container-fluid mt-3" %>
    </div>

    <% unless record.new_record? %>
    <div class="col">
      <%= link_to "Delete", feature_type_path(record), data: {confirm: "Are you sure?"}, method: :delete, class: "btn btn-danger container-fluid" %>
    </div>
    <% end %>

  <% end %>
</div>
